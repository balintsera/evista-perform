{
    "name": "evista/perform",
    "description": "A reverse Form API that builds and processes forms automatically - from markup.",
    "keywords": [
        "evista",
        "perform",
        "form"
    ],
    "homepage": "https://github.com/evista/perform",
    "license": "MIT",
    "authors": [
        {
            "name": "Balint Sera",
            "email": "balint.sera@gmail.com",
            "homepage": "http://evista-agency.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.5.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Evista\\Perform\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Evista\\Perform\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
